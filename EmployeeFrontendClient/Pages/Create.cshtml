@page
@model EmployeeFrontendClient.Pages.CreateModel
@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>
<form method="post" class="mt-3">
    <div class="form-group mb-3">
        <label asp-for="Employee.Name" class="form-label">Name</label>
        <input asp-for="Employee.Name" class="form-control" placeholder="Enter employee name" />
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Employee.Email" class="form-label">Email</label>
        <input asp-for="Employee.Email" type="email" class="form-control" placeholder="Enter email" />
        <span asp-validation-for="Employee.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Employee.Address" class="form-label">Address</label>
        <input asp-for="Employee.Address" class="form-control" placeholder="Enter address" />
        <span asp-validation-for="Employee.Address" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Employee.Role" class="form-label">Role</label>
        <input asp-for="Employee.Role" class="form-control" placeholder="Enter role" />
        <span asp-validation-for="Employee.Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Employee</button>
    <a asp-page="EmployeeList" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}