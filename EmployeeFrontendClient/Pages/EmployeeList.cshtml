@page
@model EmployeeFrontendClient.Pages.EmployeeListModel
@{
    ViewData["Title"] = "Employees List";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h1>List of Employees</h1>

<!-- Add Employee Button -->
<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Employee
    </a>
</div>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.EmployeeModels)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Role</td>
                <td>@employee.Email</td>
                <td>@employee.Address</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@employee.Id" style="display: inline;"
                          onsubmit="return confirm('Are you sure you want to delete this employee?')">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.EmployeeModels.Any())
{
    <div class="text-center py-5">
        <h3>No employees found</h3>
        <p class="text-muted">Get started by adding your first employee</p>
        <a asp-page="Create" class="btn btn-primary btn-lg">Add First Employee</a>
    </div>
}