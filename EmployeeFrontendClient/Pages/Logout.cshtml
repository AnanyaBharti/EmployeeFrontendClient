@page
@model EmployeeFrontendClient.Pages.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="card-body text-center">
                <p class="mb-4">Are you sure you want to log out?</p>

                <form method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-lg me-2">
                        <i class="fas fa-sign-out-alt"></i> Yes, Log me out
                    </button>
                </form>

                <a href="javascript:history.back()" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>

                <div class="mt-4">
                    <hr>
                    <p class="text-muted">Or navigate to:</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-page="Login" class="btn btn-outline-primary">Log in again</a>
                        <a asp-page="/Index" class="btn btn-outline-secondary">Go to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>